{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "hanni",
  "version": "0.1.0",
  "identifier": "com.patty.hanni",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "hanni",
        "fullscreen": true,
        "width": 800,
        "height": 600,
        "dragDropEnabled": false,
        "additionalBrowserArgs": "--disable-gpu-vsync --disable-frame-rate-limit"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "category": "PuzzleGame",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
