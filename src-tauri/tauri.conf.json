{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Hanni",
  "version": "0.1.1",
  "identifier": "com.patty.hanni",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Hanni v0.1.1 (TETR.IO Client)",
        "fullscreen": true,
        "width": 800,
        "height": 600,
        "dragDropEnabled": false,
        "additionalBrowserArgs": "--disable-gpu-vsync --disable-frame-rate-limit"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "nsis",
      "msi",
      "app",
      "appimage",
      "deb"
    ],
    "category": "Game",
    "externalBin": [
      "bin/socks5-proxy"
    ],
    "shortDescription": "Unofficial rust desktop wrapper for TETR.IO",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "signingIdentity": "-"
    }
  }
}
